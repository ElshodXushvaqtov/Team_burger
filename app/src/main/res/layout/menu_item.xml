<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF6D6">


    <androidx.cardview.widget.CardView
        android:id="@+id/menu_item_bg"
        android:layout_width="330dp"
        android:layout_height="110dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#84A59D"
        android:elevation="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginTop="-10dp"
            android:fontFamily="@font/unbounded"
            android:text="Free Donut!"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/item_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/unbounded"
            android:text="For orders over $20"
            android:textColor="#F4F1DE" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="120dp"
        android:layout_height="115dp"
        android:elevation="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/donut" />


</androidx.constraintlayout.widget.ConstraintLayout>